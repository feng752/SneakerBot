{
    "extends": "airbnb-base",
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "max-len": [
            "warn",
            140
        ],
        "no-console": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-await-in-loop": "off",
        "radix": "off",
        "no-undef": "warn",
        "no-loop-func": "off",
        "arrow-body-style": "off",
        "no-continue": "off"
    }
}